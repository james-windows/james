<Window x:Class="James.Windows.LargeType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LargeType" Height="300" Width="300" WindowStartupLocation="CenterScreen" AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False" WindowStyle="None" Opacity="{Binding Path=LargeTypeOpacity}" Background="{x:Null}"
        WindowState="Normal">
    <Grid Background="Black" Margin="50">
        <Viewbox Margin="20">
            <TextBlock x:Name="TextBlock" Foreground="White" TextWrapping="Wrap" MaxWidth="100" TextAlignment="Center" />
        </Viewbox>
    </Grid>
</Window>